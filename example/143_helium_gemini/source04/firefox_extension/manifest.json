{
  "manifest_version": 3,
  "name": "RocketRecap Summarizer",
  "version": "1.2.1",
  "description": "Sends the current YouTube URL or webpage (or selection) to RocketRecap for summarization.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://rocketrecap.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "summarizer@rocketrecap.com"
    }
  }
}
